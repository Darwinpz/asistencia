<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_usuarios">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="Volver"
        android:background="@color/proyecto"
        android:navigationIcon="@drawable/ic_back"
        android:titleTextColor="@color/white"
        >


    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Creación de usuarios"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="* Correo:"
                android:layout_margin="5dp"
                android:textStyle="bold"
                >

            </TextView>

            <EditText
                android:id="@+id/editText_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Correo electrónico"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                >

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="* Nombre:"
                android:layout_margin="5dp"
                android:textStyle="bold"
                >

            </TextView>

            <EditText
                android:id="@+id/editText_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Nombre completo"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                >

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="* Clave:"
                android:layout_margin="5dp"
                android:textStyle="bold"
                >

            </TextView>

            <EditText
                android:id="@+id/editText_clave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Clave de Acceso"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="textPassword"
                >

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="* Rol:"
                android:layout_margin="5dp"
                android:textStyle="bold"
                >

            </TextView>

            <Spinner
                android:id="@+id/spinner_rol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                >

            </Spinner>

            <Button
                android:id="@+id/btn_add_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Crear Usuario"
                android:padding="15dp"
                android:textSize="20sp"
                android:backgroundTint="@color/success"
                >

            </Button>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>